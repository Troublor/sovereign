{
  "name": "Sovereign.app",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/DemocracyEarth/sovereign.git"
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/DemocracyEarth"
  },
  "scripts": {
    "start": "meteor --settings=config/production/settings.json",
    "pretest": "npm run lint --silent",
    "test": "meteor test --settings=config/development/settings.json --once --driver-package dispatch:mocha-phantomjs",
    "test-app": "meteor test --full-app --once --driver-package dispatch:mocha-phantomjs",
    "test-watch": "meteor test --settings=config/development/settings.json --driver-package practicalmeteor:mocha --port 3100",
    "test-watch:dev": "meteor --settings=config/development/settings.json test --driver-package practicalmeteor:mocha --port 3100",
    "test-watch:prod": "meteor --settings=config/production/settings.json test --driver-package practicalmeteor:mocha --port 3100",
    "test-app-watch": "meteor test --full-app --driver-package practicalmeteor:mocha --port 3100",
    "test:features": "./node_modules/.bin/chimp config/testing/chimp.js --chai --ddp=http://localhost:3003",
    "start:dev": "meteor --settings=config/development/settings.json",
    "start:debug": "meteor debug --inspect-brk=5959 --settings=config/development/settings.json",
    "start:features": "MONGO_URL=mongodb://localhost:27017/sovereign_test meteor --settings=config/development/settings.json --port 3003",
    "lint": "eslint .",
    "postinstall": "opencollective-postinstall || exit 0"
  },
  "dependencies": {
    "@babel/runtime": "^7.9.6",
    "abi-decoder": "^1.2.0",
    "atob": "^2.1.2",
    "autoprefixer": "^6.4.1",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-runtime": "^6.26.0",
    "bcrypt": "^3.0.8",
    "bcryptjs": "^2.4.0",
    "bignumber.js": "^7.2.1",
    "bindings": "^1.5.0",
    "blockstack": "^18.3.1",
    "brace-expansion": "^1.1.11",
    "braces": "^3.0.2",
    "chart.js": "^2.9.3",
    "core-js": "^2.6.11",
    "cron": "^1.8.2",
    "cryptiles": "^4.1.3",
    "deep-extend": "^0.5.1",
    "diff": "^4.0.2",
    "ethereum-blockies": "^0.1.1",
    "ethereum-blockies-base64": "^1.0.2",
    "ethereumjs-util": "^5.2.0",
    "extend": "^3.0.2",
    "faker": "^3.0.1",
    "fibers": "^4.0.2",
    "fortmatic": "^1.1.3",
    "fstream": "^1.0.12",
    "gini": "^1.1.7",
    "hapi": "^17.8.5",
    "hoek": "^5.0.4",
    "https-proxy-agent": "^2.2.4",
    "human-standard-token-abi": "^2.0.0",
    "json-schema-faker": "^0.4.7",
    "jsontokens": "^0.7.8",
    "lodash": "^4.17.15",
    "lodash.merge": "^4.6.2",
    "minimist": "^1.2.5",
    "nan": "^2.14.0",
    "numeral": "^2.0.6",
    "phantomjs-prebuilt": "^2.1.16",
    "prop-types": "^15.7.2",
    "qrcode": "^1.4.4",
    "randomatic": "^3.1.1",
    "randomfill": "^1.0.4",
    "react": "^16.12.0",
    "react-addons-pure-render-mixin": "^15.6.2",
    "react-dom": "^16.12.0",
    "react-fastclick": "^3.0.2",
    "slugify": "^1.3.6",
    "sshpk": "^1.16.1",
    "tar": "^5.0.5",
    "underscore.string": "^3.3.5",
    "web3": "^1.2.6",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.0",
    "chai": "^4.2.0",
    "chai-string": "^1.5.0",
    "escape-string-regexp": "^1.0.5",
    "eslint": "^4.18.2",
    "eslint-config-airbnb": "^11.1.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.2",
    "eslint-plugin-meteor": "^4.2.2",
    "eslint-plugin-react": "^6.2.2",
    "meteor-node-stubs": "^0.3.3",
    "opencollective-postinstall": "^2.0.2",
    "react-dnd": "^5.0.0",
    "react-dnd-html5-backend": "^3.0.2",
    "react-tag-input": "^6.4.2",
    "shell-source": "^1.1.0",
    "shelljs": "^0.7.4",
    "words-to-numbers": "^1.5.1",
    "yamljs": "^0.3.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true
    },
    "globals": {
      "_": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "import/prefer-default-export": "off",
      "no-underscore-dangle": "off",
      "guard-for-in": "off",
      "prefer-arrow-callback": "off",
      "func-names": [
        "error",
        "never"
      ],
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "^meteor/",
            "^/"
          ]
        }
      ],
      "no-restricted-syntax": "off",
      "max-len": [
        "error",
        {
          "code": 300
        }
      ],
      "arrow-body-style": [
        "error",
        "always"
      ],
      "object-shorthand": [
        "error",
        "always",
        {
          "avoidQuotes": false
        }
      ],
      "meteor/no-session": "off",
      "meteor/eventmap-params": [
        "error",
        {
          "eventParamName": "event",
          "templateInstanceParamName": "instance"
        }
      ],
      "meteor/template-names": [
        "off"
      ]
    },
    "settings": {
      "import/core-modules": [
        "meteor/meteor"
      ],
      "import/resolver": "meteor"
    }
  },
  "babel": {
    "plugins": [
      "istanbul"
    ]
  }
}
